<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/contenidoView"
tools:context=".MainActivity">


<TabHost
    android:id="@+id/tbhgeneral"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/valoragua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblvalor"
                    android:text="Ingrese cantidad:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/txtCantidadL"
                    android:layout_below="@id/lblvalor"
                    android:layout_marginTop="40dp"
                    android:hint="Cantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/lblRespuestaL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCantidadL"
                    android:layout_marginTop="116dp"
                    android:text="Respuesta: ?" />

                <Button
                    android:id="@+id/btnCalcular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblRespuestaL"
                    android:layout_marginTop="34dp"
                    android:text="Calcular" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tabconversorarea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblDe"
                    android:text="DE:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/cboDeL"
                    android:entries="@array/Area"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/lblAL"
                    android:text="A:"
                    android:layout_below="@id/lblDe"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/cboAL"
                    android:layout_below="@id/cboDeL"
                    android:layout_marginTop="40dp"
                    android:entries="@array/Area"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/txtCantidad"
                    android:layout_below="@id/lblAL"
                    android:layout_marginTop="40dp"
                    android:hint="Cantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/lblRespuesta"
                    android:layout_below="@id/txtCantidad"
                    android:text="Respuesta: ?"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnCalcularL"
                    android:layout_below="@id/lblRespuesta"
                    android:layout_marginTop="40dp"
                    android:text="Convertir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



        </FrameLayout>

    </LinearLayout>
</TabHost>

</RelativeLayout>

