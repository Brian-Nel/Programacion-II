<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese la cantidad de datos"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/txtcantidad1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/titulo"
        android:hint="Cantidad" />
    <EditText
        android:id="@+id/txtcantidad2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtcantidad1"
        android:hint="Cantidad" />

    <EditText
        android:id="@+id/txtcantidad3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtcantidad2"
        android:hint="Cantidad" />

    <Button
        android:id="@+id/calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcantidad3"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:text="Ingresar" />
</RelativeLayout>

